<header>
  <% unless current_page?(root_path) %>
  	<%= link_to 'Home', root_path, method: :get, data: { confirm: 'Are you sure you want to leave this page?' } %>
  <% end %>
  <% unless current_user.nil? %>
    <%= 'Welcome ' + current_user.name.to_s %>
    <%= link_to 'log out', singout_path, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% else %>
    <%= link_to 'Sing Up', signup_path, method: :get %>
  <% end %>

</header>