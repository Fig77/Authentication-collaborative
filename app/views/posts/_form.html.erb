<%= form_for @post do |f| %>
  <%= f.text_field :name, :value => @current_user.name, :disabled => true, :style => 'color: black' %>
   <br>
   <br>
  <%= f.text_field :idUser, :value => @current_user.id, :style => 'display:none' %>
  <%= f.text_field :content, :placeholder => 'content' %>
  <%= f.submit "Submit" %>
<% end %>